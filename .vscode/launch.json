    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'nmsr-aas'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=nmsr-aas",
                    "--package=nmsr-aas",
                    "--features=wgpu,tracing"
                ],
                "filter": {
                    "name": "nmsr-aas",
                    "kind": "bin"
                }
            },
            "args": [
                "-c",
                "config.toml"
            ],
            "terminal": "integrated",
            "cwd": "${workspaceFolder}/run",
            "sourceLanguages": ["rust"],
            "env": {
                "WGPU_BACKEND": "vulkan",
                "RUST_BACKTRACE": "1",
                "WGPU_POWER_PREF": "low",
                //"NMSR_SAMPLE_COUNT": "1",
                //"VK_ICD_FILENAMES": "D:\\IDEs\\CLionProjects\\nmsr-wgpu\\lvp_icd.x86_64.json"
            }
        }
    ]
}